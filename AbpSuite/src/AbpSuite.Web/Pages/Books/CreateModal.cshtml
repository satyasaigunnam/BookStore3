@page
@using Microsoft.AspNetCore.Mvc.Localization
@using AbpSuite.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using AbpSuite.Web.Pages.Books
@using AbpSuite.Books;
@using System.Globalization
@inject IHtmlLocalizer<AbpSuiteResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Books/CreateModal" autocomplete="off">
    <abp-modal id="BookCreateModal">
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Book.Title" />

            <abp-input asp-for="Book.Year" />

                                <abp-select asp-for="Book.AuthorId" asp-items="Model.AuthorLookupList" label="@L["Author"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>